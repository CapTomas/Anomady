  "dashboard_config_ref": "salt_reavers",
  "dashboard_config": {
    "top_panel": [
      {
        "id": "integrity",
        "label_key": "char_panel_label_ship_integrity",
        "tooltip_key": "tooltip_attr_ship_integrity_salt_reavers",
        "type": "meter",
        "meter_type": "health",
        "maps_to_run_stat": "currentIntegrity",
        "short_description": "Ship's Hull Integrity & Seaworthiness. Reflects the vessel's ability to withstand damage. If it reaches zero, the ship sinks."
      },
      {
        "id": "willpower",
        "label_key": "char_panel_label_crew_cohesion",
        "tooltip_key": "tooltip_attr_crew_cohesion_salt_reavers",
        "type": "meter",
        "meter_type": "stamina",
        "maps_to_run_stat": "currentWillpower",
        "short_description": "Crew Cohesion & Daring. Represents the crew's fighting spirit and the Captain's ability to inspire bold actions. Expended for potent ship maneuvers or crew efforts."
      },
      {
        "id": "aptitude",
        "label_key": "char_panel_label_ship_proficiency",
        "tooltip_key": "tooltip_attr_ship_proficiency_salt_reavers",
        "type": "number",
        "maps_to_run_stat": "aptitude",
        "short_description": "Ship's Combat & Sailing Proficiency. Influenced by Captain's skill, crew training, and ship's condition. Affects gunnery, maneuvering, and boarding."
      },
      {
        "id": "resilience",
        "label_key": "char_panel_label_ship_durability",
        "tooltip_key": "tooltip_attr_ship_durability_salt_reavers",
        "type": "number",
        "maps_to_run_stat": "resilience",
        "short_description": "Ship's Durability & Warding. The vessel's inherent toughness against storms, curses, and environmental hazards."
      },
      {
        "id": "strain_level",
        "label_key": "label_strain_level_captain_salt_reavers",
        "tooltip_key": "tooltip_item_strain_level_captain_salt_reavers",
        "type": "status_icon",
        "default_ai_value": 1,
        "maps_to_run_stat": "strainLevel",
        "level_mappings": {
          "1": { "display_text_key": "strain_level_1_display_sr_captain", "css_class": "status-ok", "icon_path": "images/sentiment/icon_sentiment_satisfied.svg" },
          "2": { "display_text_key": "strain_level_2_display_sr_captain", "css_class": "status-warning", "icon_path": "images/sentiment/icon_sentiment_neutral.svg" },
          "3": { "display_text_key": "strain_level_3_display_sr_captain", "css_class": "status-danger", "icon_path": "images/sentiment/icon_sentiment_dissatisfied.svg" },
          "4": { "display_text_key": "strain_level_4_display_sr_captain", "css_class": "status-critical", "icon_path": "images/sentiment/icon_sentiment_very_dissatisfied.svg" }
        },
        "must_translate": false,
        "short_description": "Captain's Personal Strain. Cumulative stress and weariness. MUST BE INTEGER (1-4). Higher levels can lead to poor decisions or affect crew morale. 1: Steady, 2: Frayed, 3: Pressured, 4: At Wit's End."
      }
    ],
    "left_panel": [
      {
        "id": "captain-and-ship-log-panel",
        "title_key": "title_captain_ship_log_salt_reavers",
        "type": "static",
