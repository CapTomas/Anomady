          {
            "id": "equipped_ship_guns_effect",
            "label_key": "label_equipped_ship_guns_salt_reavers",
            "tooltip_key": "tooltip_slot_ship_guns_salt_reavers",
            "type": "text_long",
            "default_value_key": "default_ship_guns_salt_reavers",
            "must_translate": true,
            "short_description": "Currently mounted cannons (e.g., 'Rusty 6-Pounders', 'Long Nine Culverins'). Details their damage, range, or special properties."
          },
          {
            "id": "equipped_ship_hull_rigging_effect",
            "label_key": "label_equipped_ship_hull_rigging_salt_reavers",
            "tooltip_key": "tooltip_slot_ship_hull_rigging_salt_reavers",
            "type": "text_long",
            "default_value_key": "default_ship_hull_rigging_salt_reavers",
            "must_translate": true,
            "short_description": "Fitted hull upgrades and sail quality (e.g., 'Patched Canvas & Salted Timbers', 'Ironwood Plating & Storm-Fast Sails'). Affects Hull Integrity, Resilience, or Aptitude."
          },
          {
            "id": "equipped_captains_gambit_effect",
            "label_key": "label_equipped_captains_gambit_salt_reavers",
            "tooltip_key": "tooltip_slot_captains_gambit_salt_reavers",
            "type": "text_long",
            "default_value_key": "default_captains_gambit_salt_reavers",
            "must_translate": true,
            "short_description": "Readied consumable for a tactical edge (e.g., 'Grapeshot Load', 'Extra Grog Rations', 'Fair Wind Charm')."
          }
        ]
      },
