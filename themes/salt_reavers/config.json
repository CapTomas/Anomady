        "id": "ship-stores-treasury-panel",
        "title_key": "title_ship_stores_salt_reavers",
        "type": "collapsible",
        "initial_expanded": false,
        "boot_delay": 600,
        "items": [
          {
            "id": "ship_doubloons_balance",
            "label_key": "label_ship_doubloons_salt_reavers",
            "type": "number_text",
            "default_value_key": "doubloons_empty_chest",
