        "items": [
          {
            "id": "ship_name",
            "label_key": "label_ship_name_salt_reavers",
            "type": "text",
            "default_value_key": "ship_name_default",
            "must_translate": true,
            "short_description": "The name of the Captain's current pirate vessel (e.g., 'The Sea Serpent')."
          },
          {
            "id": "ship_infamy_level",
            "label_key": "label_ship_infamy_salt_reavers",
            "type": "text",
            "default_value_key": "infamy_unknown_scurvy_dogs",
            "must_translate": true,
            "short_description": "The ship's (and by extension, the Captain's) fearsome reputation across the Azure Archipelago."
          }
        ]
      },
      {
        "id": "ship-outfitting-panel",
        "title_key": "title_ship_outfitting_salt_reavers",
        "type": "collapsible",
        "initial_expanded": true,
